{#
/**
 * Available variables:
 * - section_cta__base_class - the base classname
 * - section_cta__modifiers - array of modifiers to add to the base classname
 * - section_cta__blockname - a class that will prepend all other classes
 * - section_cta__title - the section title
 * - section_cta_link_title - the section read more link title
 * - section_cta__link_url - the section read more link url
 *
 * Available blocks:
 * - section_cta_items - wraps the section items.
 */
#}
{% set section_cta__base_class = section_grid__base_class|default("section-cta") %}
{% set section_cta__modifiers = section_grid__modifiers|default([]) %}

<div {{ bem(section_cta__base_class, section_cta__modifiers) }}>
  {% for item in section_cta__items %}
    {% include "@molecules/cta/cta.twig" with {
      cta__modifiers: cta_modifiers,
      cta__title: item.title,
      cta__lead_text: item.lead_text,
      cta__link: item.link,
      cta__icon: item.icon,
    } %}
  {% endfor %}
</div>
