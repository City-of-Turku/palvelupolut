{#
/**
 * Available variables:
 * - text_teaser__base_class - the base classname
 * - text_teaser__modifiers - array of modifiers to add to the base classname
 * - text_teaser__content - the content of the long text
 *
 * Available blocks:
 * - text_teaser_content - used to replace the content of the component with something other than text
 *   for example: A long text field in Drupal
 */
#}
{% set text_teaser__base_class = text_teaser__base_class|default('text-teaser') %}
{% set text_teaser__modifiers = text_teaser__modifiers|default([]) %}

<div {{ bem(text_teaser__base_class, text_teaser__modifiers) }}>
  {% block text_teaser_content %}
    {{ text_teaser__content }}
  {% endblock %}
</div>
