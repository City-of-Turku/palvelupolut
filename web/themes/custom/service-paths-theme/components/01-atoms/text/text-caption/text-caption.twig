{#
/**
 * Available variables:
 * - text_caption__base_class - the base classname
 * - text_caption__modifiers - array of modifiers to add to the base classname
 * - text_caption__content - the content of the long text
 * - text_caption__tag - the HTML tag of the wrapping element
 *
 * Available blocks:
 * - text_caption__content - used to replace the content of the component with something other than text
 *   for example: A long text field in Drupal
 */
#}
{% set text_caption__base_class = text_caption__base_class|default('text-caption') %}
{% set text_caption__modifiers = text_caption__modifiers|default([]) %}
{% set text_caption__tag = text_caption__tag|default("div") %}

<{{ text_caption__tag }} {{ bem(text_caption__base_class, text_caption__modifiers) }}>
  {% block text_caption__content %}
    {{ text_caption__content }}
  {% endblock %}
</{{ text_caption__tag }}>
