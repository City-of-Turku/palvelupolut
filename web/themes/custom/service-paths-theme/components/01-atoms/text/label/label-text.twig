{#
/**
 * Available variables:
 * - label__base_class - the base classname
 * - label__modifiers - array of modifiers to add to the base classname
 * - label__content - the content of the long text
 *
 * Available blocks:
 * - label_content - used to replace the content of the component with something other than text
 *   for example: A long text field in Drupal
 */
#}
{% set label__base_class = label__base_class|default('label') %}
{% set label__modifiers = label__modifiers|default([]) %}

<div {{ bem(label__base_class, label__modifiers) }}>
  {% block label_content %}
    {{ label__content }}
  {% endblock %}
</div>
