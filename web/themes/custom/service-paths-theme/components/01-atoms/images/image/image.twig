{% set image__base_class = image__base_class|default("image") %}

<img
  {{ bem(image__base_class, image__modifiers, image__blockname) }}
  {% if image_srcset %}
    srcset="{{ image_srcset }}"
  {% endif %}
  {% if image_sizes %}
    sizes="{{ image_sizes }}"
  {% endif %}
  src="{{ image_src }}"
  {% if image_alt %}
    alt="{{ image_alt }}"
  {% endif %}
  {% if image_title %}
    title="{{ image_title }}"
  {% endif %}
/>
