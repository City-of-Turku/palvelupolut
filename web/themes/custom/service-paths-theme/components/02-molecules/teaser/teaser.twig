{#
/**
* @file
* Theme implementation to display site teaser content
*
* Variables:
* - teaser__link: The link to the full content
* - teaser__title: Title (h1) text.
* - teaser__lead_text: Copy text to show on the teaser.
*
* Blocks:
* - teaser__image: Background image.
*
* @ingroup themeable
*/
#}
{% set teaser__base_class = 'teaser' %}
{% set teaser__modifiers = teaser__modifiers|default([]) %}

<div {{ bem(teaser__base_class, teaser__modifiers) }}>
   <div {{ bem('image', [], teaser__base_class) }} aria-hidden="true">
    {% block teaser_image %}
      {% include '@atoms/images/image/responsive-image.twig' with teaser__image %}
    {% endblock %}
  </div>

  <div {{ bem('inner', [], teaser__base_class) }}>
    {% include '@atoms/text/label/label.twig' with {
      label__base_class: 'label',
      label__content:  teaser__lead_text,
      label__blockname: teaser__base_class,
    } %}

    {% include '@atoms/text/heading/heading.twig' with {
      heading__level: 4,
      heading__base_class: 'title',
      heading__blockname: teaser__base_class,
      heading: teaser__title,
      heading__url: teaser__link,
    } %}

    {% include '@atoms/links/link/link.twig' with {
      link__base_class: 'link',
      link__icon_before: 'arrow-right',
      link__blockname: teaser__base_class,
    } %}
  </div>
</div>
