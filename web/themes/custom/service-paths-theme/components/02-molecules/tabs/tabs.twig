{#
/**
 * @file
 * Theme override to display primary and secondary local tasks.
 *
 * Available variables:
 * - primary: HTML list items representing primary tasks.
 * - secondary: HTML list items representing secondary tasks.
 *
 * Each item in these variables (primary and secondary) can be individually
 * themed in menu-local-task.html.twig.
 */
#}

{% set tabs__base_class = 'tabs' %}

{% set tabs__list__base_class = tabs__list__base_class|default('tabs__nav') %}
{% set tabs__list__modifiers = tabs__list__modifiers|default(['local-tasks']) %}

{% include '@atoms/text/heading/heading.twig' with {
  heading: tabs__heading,
  heading__level: 2,
  heading__modifiers: [tabs__base_class],
  heading__extra_classes: ['visually-hidden'],
} %}
<ul {{ bem(tabs__list__base_class, tabs__list__modifiers) }}>
  {% block tabs__content %}
    {% for tab in tabs %}
      {% include "@atoms/links/link/link.twig" with {
        link__modifiers: ['tab'],
        link__extra_classes: tab.tab__extra_classes,
        link__url: tab.tab__url,
        link__content: tab.tab__content,
      } %}
    {% endfor %}
  {% endblock %}
</ul>
