{% set link__url = item.url %}
{% set link__base_class = 'link' %}
{% set link__modifiers = item_modifiers %}
{% set link__blockname = menu_social__base_class %}

{% extends "@atoms/links/link/link.twig" %}
  {% block link_content %}
    {% include "@atoms/images/icon/icon.twig" with {
      icon__name: item.icon,
      icon__blockname: menu_social__base_class,
    } %}
    {% include "@atoms/visually-hidden/visually-hidden.twig" with {
      visually_hidden__content: item.title|t,
    } %}
    {% include "@atoms/visually-hidden/visually-hidden.twig" with {
      visually_hidden__content: " (opens in a new window, goes to a different website)"|t,
    } %}
  {% endblock %}
