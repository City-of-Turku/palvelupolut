{#
/**
 * Available variables:
 * - list__base_class - the base classname
 * - list__modifiers - array of modifiers to add to the base classname
 * - list__blockname - blockname prepended to the base classname
 *
 * - list__items:
 *   - item.term
 *   - item.term_base_class
 *   - item.term_modifiers
 *   - item.term_blockname
 *   - item.definition
 *   - item.definition_base_class
 *   - item.definition_modifiers
 *   - item.definition_blockname
 */
#}
{% set list__base_class = list__base_class|default('list-definition') %}

<dl {{ bem(list__base_class, list__modifiers, list__blockname) }}>
  {% block list_content %}
    {% for item in list__items %}
      {% include "@atoms/lists/list-item-definition.twig" with {
        list_item__term: item.term,
        list_item__term__base_class: item.term__base_class,
        list_item__term__modifiers: item.term__modifiers,
        list_item__term__blockname: item.term__blockname,
        list_item__definition: item.definition,
        list_item__definition__base_class: item.definition__base_class,
        list_item__definition__modifiers: item.definition__modifiers,
        list_item__definition__blockname: item.definition__blockname,
      } %}
    {% endfor %}
  {% endblock %}
</dl>
