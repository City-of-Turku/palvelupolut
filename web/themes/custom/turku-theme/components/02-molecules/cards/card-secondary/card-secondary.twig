{#
 # Available variables:
 # - card_secondary__base_class - base classname of the wrapper.
 # - card_secondary__modifiers - array of modifiers to add to the base classname of the wrapper.
 # - card_secondary__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 #
 # - card_secondary__heading - the content of the title component.
 #
 # - card_secondary__url - the url the title should link to.
 #
 # - card_secondary__body - the content of the body component.
 #}
{% set card_secondary__base_class = 'card-secondary' %}
{% set card_secondary__modifiers = card_secondary__modifiers|default([]) %}

<div {{ bem(card_secondary__base_class, card_secondary__modifiers, card_secondary__blockname) }}>
  <div {{ bem('content', [], card_secondary__base_class) }}>
    {% block card_secondary__content %}
      {% if card_secondary__heading %}
        {{ title_prefix }}
        {% include "@atoms/text/heading/heading.twig" with {
          heading: card_secondary__heading,
          heading__level: 3,
          heading__url: card_secondary__url,
          heading__base_class: 'heading',
          heading__blockname: card_secondary__base_class,
          heading__link_base_class: 'heading-link',
          heading__link_blockname: card_secondary__base_class,
        } %}
        {{ title_suffix }}
      {% endif %}

      {% if card_secondary__body %}
        <div {{ bem('body', [], card_secondary__base_class) }}>
          {{ card_secondary__body }}
        </div>
      {% endif %}

      {% include "@atoms/images/icon/icon.twig" with {
        icon__name: 'arrow-right',
        icon__decorative: true,
      } %}
    {% endblock %}
  </div>
</div>
